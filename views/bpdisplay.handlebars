<div class="post container">
  <div>
    <h2>{{blogpost.title}}</h2>
    <h3>by {{blogpost.user.name}}</h3>
    <p>{{blogpost.content}}</p>
  </div>
</div>

<div class="comment-section">
  {{#if comment.length}}
    <h3>Comments</h3>
    {{#each comment}}
      <div class="comment">
        <h4>{{user.name}}</h4>
        <p>{{comment_text}}</p>
      </div>
    {{/each}}
  {{/if}}

  {{#if logged_in}}
    <form class="comment-form">
      <textarea name="comment_text" maxlength="300" placeholder="Leave a comment..."></textarea>
      <button type="submit"></button>
    </form>
  {{else}}
    <p><a href="/login"></a>Login to leave a comment</p>
  {{/if}}

</div>

<script src="./js/comment.js"></script>